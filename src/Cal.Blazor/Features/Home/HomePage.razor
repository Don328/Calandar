@page "/"

<h2>Calandar</h2>
<hr />
<div class="row">
    <div class="col-4">
        <h4>Today</h4>
        <DayView Day="(_today)"
            OnShowAddTask=ShowAddActivity/>
    </div>
    @if (_showAddActivity)
    {
        <div class="col-4">
            <AddActivity OnCancel=HideAddActivity
                OnSubmit=SubmitNewActivity
                Date=_selectedDay.Date />
        </div>
    }
</div>
<div class="row">
    <div class="col">
        <h4>Week</h4>
        <WeekView Days=OneWeekSchedule
            OnShowAddTask=ShowAddActivity/>
    </div>
</div>

