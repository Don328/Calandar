
<div class="card-group shadow-lg">
    @foreach(var label in _header)
    {
        <div class="card">
            <div class="card-header">
                @label    
            </div>
        </div>
    }
</div>
@foreach (var week in _weeks)
{
    <div class="card-group shadow-lg">
        <WeekView Days=week
              OnSubmit=HandleShowAddTask />
    </div>
}
